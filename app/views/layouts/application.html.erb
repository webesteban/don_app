<!DOCTYPE html>
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if IE 9]>         <html class="no-js lt-ie10"> <![endif]-->
<!--[if gt IE 9]><!--> <html class="no-js"> <!--<![endif]-->
<head>
	<meta charset="utf-8">

	<title>DonApp</title>

	<meta name="description" content="ProUI is a Responsive Bootstrap Admin Template created by pixelcave and published on Themeforest.">
	<meta name="author" content="pixelcave">
	<meta name="robots" content="noindex, nofollow">

	<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1.0">

	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>

</head>
<body>        
	<div id="page-wrapper">

		<div id="page-container" class="sidebar-partial sidebar-visible-lg sidebar-no-animations">
			<!-- Main Sidebar -->
			<div id="sidebar">
				<!-- Wrapper for scrolling functionality -->
				<div id="sidebar-scroll">
					<!-- Sidebar Content -->
					<div class="sidebar-content">
						<!-- Brand -->
						<a href="/" class="sidebar-brand">
							<i class="gi gi-flash"></i><span class="sidebar-nav-mini-hide"><strong>DonApp</strong></span>
						</a>
						<!-- END Brand -->

						<!-- User Info -->
						<div class="sidebar-section sidebar-user clearfix sidebar-nav-mini-hide">
							<div class="sidebar-user-avatar">
								<a href="page_ready_user_profile.html">
									<%= image_tag "missing_user.jpg", :alt => "avatar"  %>				
								</a>
							</div>
							<div class="sidebar-user-name"><%= current_user.first_name %></div>
							<div class="sidebar-user-links">
								
								<a href="<%= destroy_user_session_path %>" data-method="delete" data-toggle="tooltip" data-placement="bottom" title="Cerrar sesiÃ³n"><i class="gi gi-exit"></i></a>
							</div>
						</div>
						<!-- END User Info -->                            

						<!-- Sidebar Navigation -->
						<ul class="sidebar-nav">
							<li class="sidebar-header">
								<span class="sidebar-header-title">Inicio</span>
							</li>
							<li class="<%= 'active' if controller_name == 'home' %>">
								<a href="<%= dashboard_path %>"><i class="gi gi-home sidebar-nav-icon"></i><span class="sidebar-nav-mini-hide">Dashboard</span></a>
							</li>

							<li class="<%= 'active' if controller_name == 'articles' %>">
								<a href="<%= articles_path %>"><i class="gi gi-home sidebar-nav-icon"></i><span class="sidebar-nav-mini-hide">Noticias</span></a>
							</li>

							<li class="<%= 'active' if controller_name == 'home' %>">
								<a href="<%= dashboard_path %>"><i class="gi gi-home sidebar-nav-icon"></i><span class="sidebar-nav-mini-hide">Eventos</span></a>
							</li>
							
						</ul>
						<!-- END Sidebar Navigation -->                            
					</div>
					<!-- END Sidebar Content -->
				</div>
				<!-- END Wrapper for scrolling functionality -->
			</div>
			<!-- END Main Sidebar -->

			<!-- Main Container -->
			<div id="main-container">                    
				<header class="navbar navbar-default">
					<!-- Left Header Navigation -->
					<ul class="nav navbar-nav-custom">
						<!-- Main Sidebar Toggle Button -->
						<li>
							<a href="javascript:void(0)" onclick="App.sidebar('toggle-sidebar');this.blur();">
								<i class="fa fa-bars fa-fw"></i>
							</a>
						</li>
						<!-- END Main Sidebar Toggle Button -->                            
					</ul>
					<!-- END Left Header Navigation -->

					<!-- Right Header Navigation -->
					<ul class="nav navbar-nav-custom pull-right">
						<!-- User Dropdown -->
						<li class="dropdown">
							<a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">
								<%= image_tag "missing_user.jpg", :alt => "avatar" %> <i class="fa fa-angle-down"></i>
							</a>
							<ul class="dropdown-menu dropdown-custom dropdown-menu-right">
								<li class="dropdown-header text-center">Account</li>
								<li>
									<a href="<%= destroy_user_session_path %>" data-method="delete"><i class="fa fa-ban fa-fw pull-right"></i> Logout</a>
								</li>
							</ul>
						</li>
						<!-- END User Dropdown -->
					</ul>
					<!-- END Right Header Navigation -->
				</header>
				<!-- END Header -->

				<!-- Page content -->
				<div id="page-content">
					<%= yield %>
					<br><br><br>
				</div>
				<!-- END Page Content -->

				<!-- Footer -->
				<footer class="clearfix">
					<div class="pull-right">
						Crafted with <i class="fa fa-heart text-danger"></i> by <a href="http://entropia.co" target="_blank">Daniel,Esteban y Sebastian</a>
					</div>
					<div class="pull-left">
						<span id="year-copy"></span> &copy; <a href="http://petidtag.com" target="_blank">PetIdTag</a>
					</div>
				</footer>
				<!-- END Footer -->
			</div>
			<!-- END Main Container -->
		</div>
		<!-- END Page Container -->
	</div>
	<!-- END Page Wrapper -->

	<!-- Scroll to top link, initialized in js/app.js - scrollToTop() -->
	<a href="#" id="to-top"><i class="fa fa-angle-double-up"></i></a>        

	

</body>
</html>
